{
  "manifest_version": 2,
  "name": "Real Name Widget Extractor",
  "version": "1.0",
  "description": "Obtiene los nombres de los widgets de Avantio",
  "icons": {
    "64": "icons/avantio.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/avantio.png"
    },
    "default_title": "Real Name Widget Extractor"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "realnamewidget@apoveda",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}